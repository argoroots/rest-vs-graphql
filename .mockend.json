{
    "User": {
        "name": {
            "string": {
                "regexp": "[A-Z][a-z]{5,10}"
            }
        },
        "statusMessage": {
            "string": [
                "working from home",
                "watching Netflix"
            ]
        },
        "email": {
            "regexp": "[a-z]{5,10}@[a-z]{5}\\.[a-z]{2,3}"
        },
        "isPublic": {
            "boolean": {}
        },
        "posts": {
            "hasMany": "Post"
        }
    },
    "Post": {
        "author": {
            "belongsTo": "User"
        },
        "title": {
            "loremWords": {
                "minLength": 5,
                "maxLength": 20
            }
        },
        "body": {
            "loremSentences": {
                "minLength": 20,
                "maxLength": 100
            }
        },
        "createdAt": {
            "dateTime": {
                "min": "2010-01-01T00:00:00Z",
                "max": "2020-12-31T23:59:59Z"
            }
        }
    }
}